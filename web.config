<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    
    <!-- Enable URL Rewrite -->
    <rewrite>
      <rules>
        <!-- Special handling for download URLs to prevent HTML error pages -->
        <rule name="Download Files Direct" stopProcessing="true">
          <match url="^status/download/(.*)$" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <add input="{HTTP_HOST}" pattern="automation-reports\.mobilehmi\.org" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:5000/status/download/{R:1}" 
                  appendQueryString="true" 
                  logRewrittenUrl="true" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_ORIGINAL_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_ACCEPT_ENCODING" value="" />
            <set name="HTTP_TRANSFER_ENCODING" value="" />
          </serverVariables>
        </rule>
        
        <!-- Proxy requests for automation-reports domain to Flask backend -->
        <rule name="SAT Reports Flask Backend" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <add input="{HTTP_HOST}" pattern="automation-reports\.mobilehmi\.org" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:5000/{R:1}" 
                  appendQueryString="true" 
                  logRewrittenUrl="true" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_ORIGINAL_HOST" value="{HTTP_HOST}" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>

    <!-- Error handling -->
    <httpErrors errorMode="Custom" defaultResponseMode="File">
      <remove statusCode="500" />
      <error statusCode="500" 
             responseMode="File" 
             path="500.html" />
    </httpErrors>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>

    <!-- MIME type mappings for Office documents -->
    <staticContent>
      <mimeMap fileExtension=".docx" mimeType="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
      <mimeMap fileExtension=".xlsx" mimeType="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
      <mimeMap fileExtension=".pptx" mimeType="application/vnd.openxmlformats-officedocument.presentationml.presentation" />
    </staticContent>

    <!-- Disable compression for rewrite rules -->
    <urlCompression doDynamicCompression="false" doStaticCompression="false" />
    <httpCompression>
      <dynamicTypes>
        <clear />
      </dynamicTypes>
      <staticTypes>
        <clear />
      </staticTypes>
    </httpCompression>

  </system.webServer>
</configuration>